# BlenderMCP Environment Configuration
# Copy this file to .env and fill in your values

# Blender Connection Settings
BLENDER_HOST=localhost
BLENDER_PORT=9876

# Logging Configuration
BLENDER_MCP_LOG_LEVEL=INFO
BLENDER_MCP_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
BLENDER_MCP_LOG_HANDLER=console
# BLENDER_MCP_LOG_FILE=blender_mcp.log  # Uncomment if using file handler

# API Keys (Optional - can also be set in Blender UI)
# Get your free trial key from https://hyper3d.ai/
# RODIN_API_KEY=your_hyper3d_api_key_here

# Get your API key from https://sketchfab.com/settings/password
# SKETCHFAB_API_KEY=your_sketchfab_api_key_here

# Cache Settings
# BLENDER_MCP_CACHE_DIR=~/.blender_mcp_cache
# BLENDER_MCP_CACHE_MAX_SIZE_MB=1000

# Security Settings
# BLENDER_MCP_CODE_TIMEOUT=5
# BLENDER_MCP_RATE_LIMIT_CALLS=10
# BLENDER_MCP_RATE_LIMIT_WINDOW=60
